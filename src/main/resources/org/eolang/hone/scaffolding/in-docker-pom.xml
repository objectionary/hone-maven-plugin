<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.eolang</groupId>
  <artifactId>hone</artifactId>
  <packaging>jar</packaging>
  <version>0.15.0</version>
  <name>hone</name>
  <properties>
    <jeo.version>0.13.11</jeo.version>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.eolang</groupId>
          <artifactId>jeo-maven-plugin</artifactId>
          <version>${jeo.version}</version>
          <configuration>
            <mode>debug</mode>
            <modifiers>true</modifiers>
            <omitComments>true</omitComments>
            <omitListings>true</omitListings>
            <prettyXmir>true</prettyXmir>
            <xmirVerification>false</xmirVerification>
            <skipVerification>true</skipVerification>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>exec-maven-plugin</artifactId>
          <groupId>org.codehaus.mojo</groupId>
          <configuration>
            <executable>${exec.phino.script}</executable>
            <environmentVariables>
              <HONE_VERSION>${project.version}</HONE_VERSION>
              <HONE_VERBOSE>${exec.phino.verbose}</HONE_VERBOSE>
              <HONE_DEBUG>${exec.phino.debug}</HONE_DEBUG>
              <HONE_RULES>${exec.phino.rules}</HONE_RULES>
              <HONE_GREP_IN>${exec.phino.grep-in}</HONE_GREP_IN>
              <HONE_XMIR_IN>${exec.phino.xmir-in}</HONE_XMIR_IN>
              <HONE_FROM>${exec.phino.from}</HONE_FROM>
              <HONE_TO>${exec.phino.to}</HONE_TO>
              <HONE_XMIR_OUT>${exec.phino.xmir-out}</HONE_XMIR_OUT>
              <HONE_SMALL_STEPS>${exec.phino.small-steps}</HONE_SMALL_STEPS>
              <HONE_MAX_DEPTH>${exec.phino.max-depth}</HONE_MAX_DEPTH>
              <HONE_MAX_CYCLES>${exec.phino.max-cycles}</HONE_MAX_CYCLES>
              <HONE_THREADS>${exec.phino.threads}</HONE_THREADS>
              <HONE_TIMEOUT>${exec.phino.timeout}</HONE_TIMEOUT>
            </environmentVariables>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
