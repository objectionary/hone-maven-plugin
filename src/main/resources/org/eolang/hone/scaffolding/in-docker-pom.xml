<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.eolang</groupId>
  <artifactId>hone</artifactId>
  <packaging>jar</packaging>
  <version>0.0.0</version>
  <name>hone</name>
  <properties>
    <eo.version>0.57.1</eo.version>
    <jeo.version>0.13.1</jeo.version>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.eolang</groupId>
          <artifactId>eo-maven-plugin</artifactId>
          <version>${eo.version}</version>
        </plugin>
        <plugin>
          <groupId>org.eolang</groupId>
          <artifactId>jeo-maven-plugin</artifactId>
          <version>${jeo.version}</version>
          <configuration>
            <omitComments>true</omitComments>
            <omitListings>true</omitListings>
            <prettyXmir>true</prettyXmir>
            <xmirVerification>false</xmirVerification>
            <skipVerification>true</skipVerification>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>exec-maven-plugin</artifactId>
          <groupId>org.codehaus.mojo</groupId>
          <configuration>
            <executable>${exec.phino.script}</executable>
            <arguments>
              <argument>${exec.phino.rules}</argument>
              <argument>${exec.phino.xmir-in}</argument>
              <argument>${exec.phino.from}</argument>
              <argument>${exec.phino.to}</argument>
              <argument>${exec.phino.xmir-out}</argument>
              <argument>${exec.phino.small-steps}</argument>
              <argument>${exec.phino.max-depth}</argument>
            </arguments>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>
